prefix=		@prefix@
classdir=	@datadir@/kaffe
propdir=	@datadir@/kaffe/lib
srcdir=		@srcdir@
INSTALL=	@INSTALL@
INSTALL_DATA=	@INSTALL_DATA@
MKDIR=		@MKDIR@

all:

clean:

distclean:
		rm -f Makefile

install:
		test -d $(classdir) || $(MKDIR) $(classdir)
		test -d $(propdir) || $(MKDIR) $(propdir)
		$(INSTALL_DATA) $(srcdir)/classes/classes.zip $(classdir)/classes.zip
		$(INSTALL_DATA) $(srcdir)/properties/javac.properties $(propdir)/javac.properties
		$(INSTALL_DATA) $(srcdir)/properties/appletviewer.properties $(propdir)/appletviewer.properties
