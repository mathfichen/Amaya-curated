srcdir=		@srcdir@

all:
		@(cd lib; $(MAKE) all) || exit 1

all-classes:
		@(cd classes; $(MAKE) all) || exit 1

clean:
		(cd lib; $(MAKE) clean)
		(cd classes; $(MAKE) clean)

distclean:
		(cd lib; $(MAKE) distclean)
		(cd classes; $(MAKE) distclean)
		rm -f Makefile
		-rmdir lib classes

install:
		(cd lib ; $(MAKE) install) || exit 1
