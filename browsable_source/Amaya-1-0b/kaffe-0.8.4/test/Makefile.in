srcdir=		@srcdir@

all:

test:
		@echo "*** Running tests"
		@DESTDIR=`pwd` ; export DESTDIR ;\
		cd $(srcdir)/regression ;\
		if ./TestScript ; then \
			echo "*** Passed" ; \
			exit 0 ;\
		else \
			echo "*** Failed" ; \
			exit 1 ;\
		fi

clean:
		rm -f *.class kaffe.core core

distclean:
		rm -f *.class Makefile kaffe.core core

install:
