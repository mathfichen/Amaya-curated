prefix=		@prefix@
classdir=	@datadir@/kaffe
propdir=	@datadir@/kaffe/lib
srcdir=		@srcdir@
INSTALL=	@INSTALL@
INSTALL_DATA=	@INSTALL_DATA@
MKDIR=		@MKDIR@

all:
		@(cd lib; $(MAKE))

clean:
		(cd lib; $(MAKE) clean)

distclean:
		(cd lib; $(MAKE) distclean)
		-rmdir lib
		rm -f Makefile

install:
		(cd lib; $(MAKE) install)
		test -d $(classdir) || $(MKDIR) $(classdir)
		test -d $(propdir) || $(MKDIR) $(propdir)
		$(INSTALL_DATA) $(srcdir)/classes/biss.zip $(classdir)/biss.zip
		$(INSTALL_DATA) $(srcdir)/properties/biss $(propdir)/biss
		$(INSTALL_DATA) $(srcdir)/properties/biss.awt $(propdir)/biss.awt
		$(INSTALL_DATA) $(srcdir)/properties/biss.awt.kernel $(propdir)/biss.awt.kernel
