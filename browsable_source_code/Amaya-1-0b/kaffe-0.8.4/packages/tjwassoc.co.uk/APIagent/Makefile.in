srcdir=		@srcdir@

all:
		@(cd lib ; $(MAKE) all) || exit 1

all-classes:
		@(cd classes ; $(MAKE) all) || exit 1

clean:
		@(cd lib ; $(MAKE) clean) || exit 1
		@(cd classes ; $(MAKE) clean) || exit 1

distclean:
		@(cd lib ; $(MAKE) distclean) || exit 1
		@(cd classes ; $(MAKE) distclean) || exit 1
		rm -f Makefile
		-rmdir lib classes

install:
		@(cd lib ; $(MAKE) install) || exit 1
