@VPATHOPT@=	@srcdir@
srcdir=		@srcdir@
prefix=		@prefix@
exec_prefix=	@exec_prefix@
bindir=		@bindir@
libdir=         @libdir@
INSTALL=	@INSTALL@
INSTALL_PROGRAM=@INSTALL_PROGRAM@
MKDIR=		@MKDIR@
CC=		@CC@
INCLUDES=	-I. -I$(srcdir)/../kaffevm -I../../config -I$(srcdir)/../../config -I../../include
CFLAGS=		@CFLAGS@
ALL_CFLAGS=	$(CFLAGS) @KAFFEFLAGS@ $(INCLUDES)
LIBS=		@NOSHAREDLIBS@
OBJEXT=		@OBJEXT@
EXEEXT=		@EXEEXT@

OBJECT=		main$(OBJEXT)

all:		kaffe$(EXEEXT)

kaffe$(EXEEXT):	$(OBJECT)
		$(CC) $(ALL_CFLAGS) -o kaffe$(EXEEXT) $(OBJECT) $(LIBS)

.c$(OBJEXT):
		$(CC) $(ALL_CFLAGS) -c $<

clean:
		rm -f $(LIB) kaffe$(EXEEXT) kaffe.core $(OBJECT)

distclean:	clean
		rm -f Makefile

install:
		test -d $(bindir) || $(MKDIR) $(bindir)
		$(INSTALL_PROGRAM) kaffe$(EXEEXT) $(bindir)/kaffe$(EXEEXT)
