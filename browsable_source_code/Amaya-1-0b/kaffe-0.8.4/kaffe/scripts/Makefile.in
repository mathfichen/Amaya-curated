srcdir=		@srcdir@
prefix=		@prefix@
exec_prefix=	@exec_prefix@
bindir=		@bindir@
INSTALL=	@INSTALL@
INSTALL_SCRIPT=	@INSTALL_SCRIPT@
MKDIR=		@MKDIR@
SCREXT=		@SCREXT@

all:

clean:

distclean:
		rm -f Makefile

install:
		test -d $(bindir) || $(MKDIR) $(bindir)
		$(INSTALL_SCRIPT) $(srcdir)/javac$(SCREXT) $(bindir)/javac$(SCREXT)
		$(INSTALL_SCRIPT) $(srcdir)/javadoc$(SCREXT) $(bindir)/javadoc$(SCREXT)
		$(INSTALL_SCRIPT) $(srcdir)/appletviewer$(SCREXT) $(bindir)/appletviewer$(SCREXT)
		$(INSTALL_SCRIPT) $(srcdir)/report-kaffe-bug$(SCREXT) $(bindir)/report-kaffe-bug$(SCREXT)
