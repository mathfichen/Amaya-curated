prefix=		@prefix@
srcdir=		@srcdir@
mandir=		@mandir@
INSTALL=	@INSTALL@
INSTALL_DATA=	${INSTALL} -m 644
MKDIR=		@MKDIR@

all:

clean:

distclean:
		rm -f Makefile

install:
		test -d $(mandir) || $(MKDIR) $(mandir)
		test -d $(mandir)/man1 || $(MKDIR) $(mandir)/man1
		$(INSTALL_DATA) $(srcdir)/kaffe.1 $(mandir)/man1/kaffe.1
